<h2>Task details</h2>
<ul>
  <li>Title: <%= @task.title %></li>
  <li>Details: <%= @task.details %></li>
  <li>Completed: <%= @task.completed %></li>
</ul>
<p><%= link_to("Update this task", task_edit_path) %></p>
<p><%= link_to("Back to task list", tasks_path) %></p>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>